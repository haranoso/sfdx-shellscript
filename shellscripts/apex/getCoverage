HttpRequest req = new HttpRequest();
req.setHeader('Authorization', 'Bearer ' + UserInfo.getSessionID());
req.setHeader('Content-Type', 'application/json');
req.setEndpoint(URL.getSalesforceBaseURL().toExternalForm()+'/services/data/v48.0/tooling/query/?q=Select+id,ApexClassorTrigger.Name,NumLinesCovered,NumLinesUncovered+from+ApexCodeCoverageAggregate+order+by+lastModifiedDate+asc');
req.setMethod('GET');
Http h = new Http();
HttpResponse res = h.send(req);
JSONParser parser = JSON.createParser(res.getBody());

String ret = '';
while (parser.nextToken() != null) {
    if (parser.getCurrentToken() == JSONToken.FIELD_NAME){
        String key = parser.getText();
        if(key.equals('size')){
            parser.nextToken();
            String val = parser.getText();
            ret+='size:'+val+'짜n';
        }
        if(key.equals('totalSize')){
            parser.nextToken();
            String val = parser.getText();
            ret+='total size:'+val+'짜n';
        }
        if(key.equals('Name')){
            parser.nextToken();
            String val = parser.getText();
            parser.nextToken();
            parser.nextToken();
            parser.nextToken();
            String val4 = parser.getText();
            parser.nextToken();
            parser.nextToken();
            String val6 = parser.getText();
            Decimal cov = Decimal.valueOf(val4);
            Decimal uncov = Decimal.valueOf(val6);
            if(cov+uncov>0){
                Decimal total = cov+uncov;
                Decimal dbl = ((cov/total)*100).setscale(2);
                String Check= dbl<75?'[NG] ':'[OK] ';
                ret += Check+val+' : '+String.valueOf(dbl)+'% ('+cov+'/'+total+')짜n';
            }
            else{
                ret+='[NG] '+ val+' : 0%짜n';
            }
        }
    }
}
System.debug(ret);